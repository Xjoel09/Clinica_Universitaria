<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicalUTP.Pages.RegistrarMedicamento"
             Title="Registrar Medicamento">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Registrar Medicamento" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Entry x:Name="NombreEntry" Placeholder="Nombre del Medicamento"/>
            <Entry x:Name="CantidadEntry" Placeholder="Cantidad" Keyboard="Numeric"/>
            <Entry x:Name="PrecioEntry" Placeholder="Precio" Keyboard="Numeric"/>

            <!-- Nuevo campo: Fecha de Entrega -->
            <Label Text="Fecha de Entrega"/>
            <DatePicker x:Name="FechaEntregaPicker"/>

            <!-- Nuevo campo: Fecha de Caducidad -->
            <Label Text="Fecha de Caducidad"/>
            <DatePicker x:Name="FechaCaducidadPicker"/>

            <Button Text="Guardar Medicamento" Clicked="OnGuardarMedicamentoClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

